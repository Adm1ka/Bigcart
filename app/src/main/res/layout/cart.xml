<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <Button
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@drawable/whiterec"
        app:backgroundTint="@null"/>
    <ImageView
        android:id="@+id/backarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="35dp"
        android:clickable="true"
        android:src="@drawable/backarrblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="30dp"
        android:text="Shopping Cart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/banner2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_x="0dp"
        android:layout_y="500dp"
        android:background="@drawable/whiterec"
        app:backgroundTint="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="520dp"
        android:text="Subtotal"
        android:textColor="@color/grey"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="550dp"
        android:text="Shipping charges"
        android:textColor="@color/grey"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="350dp"
        android:layout_y="520dp"
        android:hint="$"
        android:gravity="right"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/shippcharg"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="350dp"
        android:layout_y="550dp"
        android:hint="$"
        android:textSize="15dp"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="580dp"
        android:text="Total"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/total"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="350dp"
        android:layout_y="580dp"
        android:hint="$"
        android:textSize="15dp"
        android:gravity="right"/>
    <Button
        android:id="@+id/checkout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="640dp"
        android:background="@drawable/gradient"
        android:clickable="true"
        android:text="Checkout"
        app:backgroundTint="@null" />

</AbsoluteLayout>