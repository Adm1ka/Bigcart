<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <TextView
        android:id="@+id/banner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="30dp"
        android:gravity="center"
        android:text="Password Recovery"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/backarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="35dp"
        android:clickable="true"
        android:src="@drawable/backarrblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="150dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_x="60dp"
        android:layout_y="200dp"
        android:gravity="center"
        android:text="Please enter your email address that you used during registration. We will send you an email with instructions on password recovery."
        android:textColor="@color/grey"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="300dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/email"
        android:hint=" Email Address"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/link"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="360dp"
        android:background="@drawable/gradient"
        android:clickable="true"
        android:text="Send link"
        app:backgroundTint="@null" />
</AbsoluteLayout>