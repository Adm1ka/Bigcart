<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_grey">
    <ImageView
        android:id="@+id/banner1"
        android:layout_width="457dp"
        android:layout_height="693dp"
        android:layout_x="-3dp"
        android:layout_y="-91dp"
        android:src="@drawable/fem2" />
    <ImageView
        android:id="@+id/banner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="530dp"
        android:src="@drawable/rectangle_39" />
    <ImageView
        android:id="@+id/backarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="25dp"
        android:clickable="true"
        android:src="@drawable/back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="20dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="540dp"
        android:text="Welcome back!"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="580dp"
        android:text="Sign in to your account"
        android:textColor="@color/grey"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="640dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/email"
        android:hint=" Email Address"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="690dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/lock"
        android:drawableRight="@drawable/eye"
        android:hint=" Password"
        android:inputType="textPassword" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/remember"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_x="30dp"
        android:layout_y="740dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="745dp"
        android:text="Remember me"
        android:textColor="@color/grey"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:layout_y="750dp"
        android:text="Forgot password"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:clickable="true"/>
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="850dp"
        android:text="Donâ€™t have an account ?" />
    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="850dp"
        android:clickable="true"
        android:text="Sign up"
        android:textStyle="bold" />
    <Button
        android:id="@+id/log"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="800dp"
        android:background="@drawable/gradient"
        android:clickable="true"
        android:text="Login"
        app:backgroundTint="@null" />
</AbsoluteLayout>