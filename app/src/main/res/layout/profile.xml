<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/whiterec"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backarr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/backarrblack" />
        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="My account"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="150dp"
            android:id="@+id/pict"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usergrey"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/pict" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name Surname"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/aboutme"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/usergreen"
            android:drawableRight="@drawable/nextarr"
            android:text=" About me"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/orders"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/box"
            android:drawableRight="@drawable/nextarr"
            android:text=" My Orders"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/addressgreen"
            android:drawableRight="@drawable/nextarr"
            android:text=" Address"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/creditcards"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/cardgreen"
            android:drawableRight="@drawable/nextarr"
            android:text=" Credit Cards"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/transaction"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/transgreen"
            android:drawableRight="@drawable/nextarr"
            android:text=" Transactions"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/notif"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/bellgreen"
            android:drawableRight="@drawable/nextarr"
            android:text=" Notifications"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/signout"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/signout"
            android:drawableRight="@drawable/nextarr"
            android:text=" Sign out"
            android:textStyle="bold"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@color/white"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"/>
</LinearLayout>