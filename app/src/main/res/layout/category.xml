<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">
    <LinearLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/whiterec"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backarr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/backarrblack" />
        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_margin="5dp"
        android:id="@+id/veg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@color/white"
        android:drawableTop="@drawable/veg"
        android:text="Vegetables"
        android:textColor="@color/grey"
        android:textSize="15dp"
        app:backgroundTint="@null" />
    <Button
        android:layout_margin="5dp"
        android:id="@+id/fruits"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:drawableTop="@drawable/fruits"
        android:text="Fruits"
        android:textColor="@color/grey"
        app:backgroundTint="@null"/>
    <Button
        android:layout_margin="5dp"
        android:id="@+id/drinks"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:drawableTop="@drawable/drinks"
        android:text="Beverages"
        android:textColor="@color/grey"
        app:backgroundTint="@null"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/grocery"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:background="@color/white"
            android:drawableTop="@drawable/grocery"
            android:text="Grocery"
            android:textColor="@color/grey"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/oil"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:background="@color/white"
            android:drawableTop="@drawable/oil"
            android:text="Edible oil"
            android:textColor="@color/grey"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/household"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:background="@color/white"
            android:drawableTop="@drawable/household"
            android:text="Household"
            android:textColor="@color/grey"
            app:backgroundTint="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/babycare"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:drawableTop="@drawable/babycare"
        android:text="Babycare"
        android:textColor="@color/grey"
        app:backgroundTint="@null"/>
</LinearLayout>