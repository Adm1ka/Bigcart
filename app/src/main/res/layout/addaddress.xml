<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <Button
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@drawable/whiterec"
        app:backgroundTint="@null"/>
    <ImageView
        android:id="@+id/backarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="35dp"
        android:clickable="true"
        android:src="@drawable/backarrblack" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:layout_y="30dp"
        android:gravity="center"
        android:text="Add Address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="130dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/usergrey"
        android:hint=" Name"
        android:inputType="text" />
    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="180dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/email"
        android:hint=" Email Address"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/phone"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="230dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/phone"
        android:hint=" Phone Number"
        android:inputType="phone" />
    <EditText
        android:id="@+id/address"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="280dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/address"
        android:hint=" Address"
        android:inputType="text" />
    <EditText
        android:id="@+id/zip"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="330dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/code"
        android:hint=" Zip code"
        android:inputType="number" />
    <EditText
        android:id="@+id/city"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="380dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/map"
        android:hint=" City"
        android:inputType="text" />
    <EditText
        android:id="@+id/country"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="430dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/country"
        android:hint=" Country"
        android:inputType="text" />
    <Button
        android:id="@+id/addaddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="795dp"
        android:background="@drawable/gradient"
        android:clickable="true"
        android:text="Add address"
        app:backgroundTint="@null" />
</AbsoluteLayout>