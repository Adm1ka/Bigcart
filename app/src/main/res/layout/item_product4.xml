<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="195dp"
    android:layout_height="195dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="165dp"
        android:layout_y="4dp"
        android:src="@drawable/fav"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="91dp"
        android:layout_height="94dp"
        android:layout_x="60dp"
        android:layout_y="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grape"/>

    <TextView
        android:id="@+id/costpeach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="94dp"
        android:text="$7.05"
        android:textColor="@color/green"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="46dp"
        android:layout_y="124dp"
        android:text="Black Grapes"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="159dp"
        android:drawableLeft="@drawable/baggreenmin"
        android:text=" Add to cart"
        android:textSize="25dp"
        android:textStyle="bold" />
</AbsoluteLayout>