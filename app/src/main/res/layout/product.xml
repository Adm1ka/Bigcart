<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <ImageView
        android:id="@+id/imgprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@drawable/lime" />
    <ImageView
        android:id="@+id/backarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="35dp"
        android:clickable="true"
        android:src="@drawable/backarrblack" />
    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_x="20dp"
        android:layout_y="450dp"
        android:hint="$"
        android:textColor="@color/green"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="490dp"
        android:hint="Product name"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/prodweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="530dp"
        android:hint="wheigt"
        android:textColor="@color/grey"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/descript"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_x="20dp"
        android:layout_y="560dp"
        android:hint="Product description"
        android:gravity="center"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="710dp"
        android:background="@drawable/quantity_counter_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="180dp"
            android:text="Quantity"
            android:textColor="@color/grey"
            android:textSize="15dp" />
        <ImageButton
            android:id="@+id/remove"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/quantity_button_background"
            android:src="@drawable/minus"
            app:backgroundTint="@null" />
        <TextView
            android:id="@+id/textquant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20dp" />
        <ImageButton
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/quantity_button_background"
            android:src="@drawable/plus"
            app:backgroundTint="@null" />
    </LinearLayout>
    <Button
        android:id="@+id/addcart"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="780dp"
        android:background="@drawable/gradient"
        android:clickable="true"
        android:text="Add to cart"
        android:drawableRight="@drawable/bag"
        app:backgroundTint="@null" />
</AbsoluteLayout>